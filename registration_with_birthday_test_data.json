{
  "registration_test_data": {
    "description": "Test data for Customer and Service Provider registration with birthday field",
    "base_url": "http://localhost:3000/auth",
    
    "customer_registration": {
      "step_1_request_otp": {
        "method": "POST",
        "url": "/auth/request-otp",
        "description": "Step 1: Request OTP for customer registration",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "email": "johndoe@example.com",
          "phone_number": "1234567890"
        }
      },
      
      "step_2_verify_and_register": {
        "method": "POST",
        "url": "/auth/verify-otp-and-register",
        "description": "Step 2: Verify OTP and register customer with birthday",
        "headers": {
          "Content-Type": "multipart/form-data"
        },
        "form_data": {
          "first_name": "John",
          "last_name": "Doe",
          "userName": "johndoe123",
          "email": "johndoe@example.com",
          "birthday": "1990-05-15",
          "password": "SecurePassword123!",
          "phone_number": "1234567890",
          "user_location": "Manila, Philippines",
          "otp": "123456",
          "profile_photo": "(file upload)",
          "valid_id": "(file upload)"
        }
      }
    },

    "service_provider_registration": {
      "step_1_request_otp": {
        "method": "POST",
        "url": "/auth/provider-request-otp",
        "description": "Step 1: Request OTP for service provider registration",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "provider_email": "janeplumber@example.com",
          "provider_phone_number": "0987654321"
        }
      },
      
      "step_2_verify_and_register": {
        "method": "POST",
        "url": "/auth/provider-verify-otp-and-register",
        "description": "Step 2: Verify OTP and register service provider with birthday",
        "headers": {
          "Content-Type": "multipart/form-data"
        },
        "form_data": {
          "provider_first_name": "Jane",
          "provider_last_name": "Smith",
          "provider_userName": "janeplumber",
          "provider_email": "janeplumber@example.com",
          "provider_birthday": "1985-08-22",
          "provider_password": "SecurePassword123!",
          "provider_phone_number": "0987654321",
          "provider_location": "Quezon City, Philippines",
          "provider_uli": "ULI-2025-001234",
          "otp": "123456",
          "certificateNames": "[\"Plumbing NC II\", \"Safety Training Certificate\"]",
          "certificateNumbers": "[\"PL-2024-5678\", \"ST-2024-9012\"]",
          "expiryDates": "[\"2027-12-31\", \"2026-06-30\"]",
          "provider_profile_photo": "(file upload)",
          "provider_valid_id": "(file upload)",
          "certificateFile": "(multiple file uploads)"
        }
      }
    },

    "sample_birthday_formats": {
      "iso_date": "1990-05-15",
      "description": "Use ISO date format (YYYY-MM-DD) for birthday field"
    },

    "updated_appointment_test_data": {
      "create_appointment_with_final_price": {
        "method": "POST",
        "url": "/api/appointments",
        "description": "Create appointment with final_price (updated field name)",
        "headers": {
          "Authorization": "Bearer YOUR_TOKEN_HERE",
          "Content-Type": "application/json"
        },
        "body": {
          "customer_id": 1,
          "provider_id": 1,
          "scheduled_date": "2025-06-28T10:00:00.000Z",
          "appointment_status": "pending",
          "final_price": 150.50,
          "repairDescription": "Fix broken kitchen sink faucet and replace washers"
        }
      }
    },

    "postman_form_data_setup": {
      "customer_registration": {
        "note": "Use form-data in Postman Body tab",
        "fields": {
          "first_name": "text",
          "last_name": "text", 
          "userName": "text",
          "email": "text",
          "birthday": "text (YYYY-MM-DD format)",
          "password": "text",
          "phone_number": "text",
          "user_location": "text",
          "otp": "text",
          "profile_photo": "file",
          "valid_id": "file"
        }
      },
      "provider_registration": {
        "note": "Use form-data in Postman Body tab",
        "fields": {
          "provider_first_name": "text",
          "provider_last_name": "text",
          "provider_userName": "text", 
          "provider_email": "text",
          "provider_birthday": "text (YYYY-MM-DD format)",
          "provider_password": "text",
          "provider_phone_number": "text",
          "provider_location": "text",
          "provider_uli": "text",
          "otp": "text",
          "certificateNames": "text (JSON array string)",
          "certificateNumbers": "text (JSON array string)",
          "expiryDates": "text (JSON array string)",
          "provider_profile_photo": "file",
          "provider_valid_id": "file",
          "certificateFile": "file (can select multiple)"
        }
      }
    },

    "validation_notes": {
      "birthday_field": {
        "required": false,
        "format": "YYYY-MM-DD (ISO date string)",
        "example": "1990-05-15",
        "note": "Birthday is optional for both customers and service providers"
      },
      "existing_features": {
        "customer": "OTP verification, file uploads for profile photo and valid ID",
        "provider": "OTP verification, file uploads for profile, ID, and certificates",
        "certificates": "Multiple certificates with names, numbers, and expiry dates"
      }
    }
  }
}
